# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database Configuration
# For Supabase PostgreSQL (production)
SUPABASE_DB_URL=postgresql://user:password@db.supabase.co:5432/postgres

# For local SQLite (development fallback)
DATABASE_PATH=./app.db

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Security
SECRET_KEY=your-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-generate-new-for-production

# CORS (comma-separated origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080